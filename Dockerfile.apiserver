FROM golang:1.10.2 as builder

RUN mkdir -p src/github.com/g0194776/lightningmonkey
COPY . src/github.com/g0194776/lightningmonkey/
WORKDIR src/github.com/g0194776/lightningmonkey/cmd/apiserver
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o lm-apiserver .



FROM centos:7

RUN mkdir -p /opt/registry/1.12.5
COPY --from=builder /go/src/github.com/g0194776/lightningmonkey/extras/kubernetes.repo /etc/yum.repos.d/kubernetes.repo
COPY --from=builder /go/src/github.com/g0194776/lightningmonkey/cmd/apiserver/lm-apiserver /opt

COPY --from=builder /go/src/github.com/g0194776/lightningmonkey/cmd/apiserver/apis/v1/registry/1.12.5/etcd.tar /opt/registry/1.12.5/etcd.tar
COPY --from=builder /go/src/github.com/g0194776/lightningmonkey/cmd/apiserver/apis/v1/registry/1.12.5/k8s.tar /opt/registry/1.12.5/k8s.tar
COPY --from=builder /go/src/github.com/g0194776/lightningmonkey/cmd/apiserver/apis/v1/registry/1.12.5/infra.tar /opt/registry/1.12.5/infra.tar

RUN yum install -y kubeadm-1.13.5-0 net-tools --disableexcludes=kubernetes
RUN chmod +x /opt/lm-apiserver

EXPOSE 8080

#Update time zone to Asia-Shanghai
RUN ln -sf /usr/share/zoneinfo/Asia/Shanghai /etc/localtime
ENTRYPOINT /opt/lm-apiserver
